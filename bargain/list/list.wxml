<view class='page'><include src='/components/common/common'></include><include src='/components/header/header'></include><view class='body after-navber'><block wx:if='{{banner_list.length > 0}}'><view class='w-100 banner'><swiper autoplay='true' circular='true' class='w-100 h-100' duration='300' indicatorDots='true' interval='5000' style='height:360rpx;'><block wx:for='{{banner_list}}' wx:for-item='item' wx:for-index='index' wx:key='{{item.id}}'><swiper-item><navigator appId='{{item.appId}}' bindtap='navigatorClick' data-open-type='{{(item.open_type?item.open_type:"navigator")}}' data-open_type='{{item.open_type}}' data-url='{{item.page_url}}' hoverClass='none' path='{{item.path}}' target='{{(item.open_type == "wxapp"?"miniProgram":"")}}' url='{{item.page_url}}'><image class='slide-image' mode='aspectFill' src='{{item.pic_url}}'></image></navigator></swiper-item></block></swiper></view></block><view class='list'><block wx:for='{{goods_list}}' wx:for-item='item' wx:for-index='index' wx:key='{{item.id}}'><view bindtap='goToGoods' class='one flex-row' data-index='{{item.goods_id}}'><view class='img flex-x-center flex-grow-0'><image mode='aspectFill' src='{{item.cover_pic}}'></image><block wx:if='{{item.num == 0}}'><image class='sku' src='/bargain/images/icon-bargain-sku.png'></image></block></view><view class='flex-grow-1 flex-col' style='justify-content:space-between'><view><view class='text-more' style='margin-top:6rpx;'>{{item.name}}</view><view class='sale flex-row'><view class='flex-grow-0 flex-row' style='margin-right:16rpx;'><block wx:for='{{item.user_list}}' wx:for-item='user' wx:for-index='i' wx:key='{{user.id}}'><view class='flex-grow-0 avatar' style='z-index:{{i}};'><image src='{{user.avatar_url}}'></image></view></block></view><block wx:if='{{item.num > 0}}'><view class='flex-grow-1 flex-y-center'>{{item.sale}}人正在砍价</view></block><block wx:else><view class='flex-grow-1 flex-y-center'>{{item.sale}}人已参与</view></block></view></view><view class='flex-row'><view class='flex-grow-1' style='line-height:1'><view style='color:#888;text-decoration:line-through;font-size:9pt'>￥{{item.price}}</view><view class='flex-row flex-y-bottom' style='color:#ff4544;'><view class='flex-grow-0'>最低￥</view><view class='flex-grow-0' style='font-size:15pt'>{{item.min_price}}</view></view></view><view class='flex-grow-0 flex-y-bottom'><block wx:if='{{item.num > 0}}'><view class='join-btn flex-x-center flex-y-center'>立即参与</view></block><block wx:else><view class='join-btn flex-x-center flex-y-center no'>下次再来</view></block></view></view></view></view></block></view><include src='/bargain/commons/naver/naver'></include></view><include src='/components/footer/footer'></include></view>