<view class='page'><include src='/components/common/common'></include><include src='/components/header/header'></include><view class='body after-navber'><view class='top'><image src='{{(store.option.step.ranking_pic?store.option.step.ranking_pic:bg)}}'></image></view><view class='rank'><view bindtap='change' id='1'>好友排行</view><view bindtap='change' id='2'>全国排行</view></view><block wx:if='{{friend}}'><view class='triangle-left'></view></block><block wx:if='{{country}}'><view class='triangle-right'></view></block><view class='my'><view class='avatar'><image src='{{avatar}}'></image></view><view class='my-info'><view class='my-name'>{{name}}</view><block wx:if='{{money != 0}}'><view>第{{noun}}名</view></block><block wx:if='{{money == 0}}'><view>暂未上榜</view></block></view><view class='moeny'><view class='number'>{{money}}</view><view>{{(store.option.step.currency_name?store.option.step.currency_name:"活力币")}}数</view></view></view><view class='list'><block wx:for='{{list}}' wx:for-item='info' wx:for-index='index' wx:key='{{info}}'><view class='list-item'><view class='noun'><block wx:if='{{info.noun}}'><view class='noun-text'>{{info.noun}}</view></block><block wx:if='{{info.img}}'><image src='{{info.img}}'></image></block></view><view class='avatar'><image src='{{info.user.avatar_url}}'></image></view><view class='info'><view class='name'>{{info.user.nickname}}</view></view><view class='moeny'><view class='number'>{{info.step_currency}}</view><view>{{(store.option.step.currency_name?store.option.step.currency_name:"活力币")}}数</view></view></view></block></view><block wx:if='{{loading}}'><view class='loading'>正在加载中...</view></block><block wx:if='{{ad}}'><view class='temp'><block wx:if='{{unit_id}}'><ad binderror='adError' unitId='{{unit_id}}'></ad></block></view></block><view class='ad'><block wx:if='{{unit_id}}'><ad binderror='adError' unitId='{{unit_id}}'></ad></block></view></view><include src='/components/footer/footer'></include></view>