<view class='page'><include src='/components/common/common'></include><include src='/components/header/header'></include><view class='body after-navber'><view class='top'><image src='{{__wxapp_img.step.detail_bg.url}}'></image><view class='detail-name'>账户{{(store.option.step.currency_name?store.option.step.currency_name:"活力币")}}</view><view class='detail-number'>{{number}}                <text>个</text></view></view><view class='tab'><view class='tab-list'><text bindtap='tab' class='{{(_num == 1?"active":"")}}' data-num='1'>收入</text></view><view class='tab-list'><text bindtap='tab' class='{{(_num == 2?"active":"")}}' data-num='2'>支出</text></view></view><block wx:for='{{list}}' wx:for-item='item' wx:for-index='index' wx:key='{{item}}'><view class='list'><view class='list-left'><block wx:if='{{item.type == 0}}'><view class='name'>步数兑换</view></block><block wx:if='{{ (_num == 2 && item.type == 1) }}'><view class='name'>{{item.name}}</view></block><block wx:if='{{ (_num == 1 && item.type == 1) }}'><view class='name'>订单取消</view></block><block wx:if='{{item.type == 2}}'><view class='name'>{{item.activity.name}}</view></block><view>{{item.create_time}}</view></view><view class='list-right'><block wx:if='{{_num == 1}}'><text>+</text></block><block wx:if='{{_num == 2}}'><text>-</text></block><text>{{item.step_currency}}</text></view></view></block><block wx:if='{{loading}}'><view class='loading'>正在加载中...</view></block></view><include src='/components/footer/footer'></include></view>